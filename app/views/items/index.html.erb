<p id="notice"><%= notice %></p>

<h1>ShareTask</h1>

<table>
  <thead>
    <tr>
      <th>My Tasks</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tc>
        <td>_________</td>
        <td>days left -</td>
        <td>created on -</td>
        <td>options -</td>
    </tc>
    
    <% @items.each do |item| %>
      
      <tr>
        <td style="border: 1px solid black;">><%= item.title %></td>
        <td style="border: 1px solid black;"><%= distance_of_time_in_words(item.created_at, item.created_at + 7.days) %></td> 
        <td style="border: 1px solid black;"><%=item.created_at.strftime("%Y-%m-%d") %></td>
        <td style="border: 1px solid black;"><%= link_to 'Edit', edit_item_path(item) %></td>
        <td style="border: 1px solid black;"><%= link_to 'Complete', item, method: :delete, data: { confirm: 'Are you sure this task is finished?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

